using Microsoft.Azure.Search.Models;
using SimpleSearchMVCApp.Models;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;
using System.Web.Mvc;

namespace SimpleSearchMVCApp.Controllers
{
    public class HomeController : Controller
    {
        //
        // GET: /Home/
        private FeaturesSearch _featuresSearch = new FeaturesSearch();

        public ActionResult Index()
        {
            return View();
        }

        public ActionResult Geo()
        {
            return View();
        }

        public ActionResult Search(string q = "", string countyFacet = "")
        {
            // If blank search, assume they want to search everything
            if (string.IsNullOrWhiteSpace(q))
                q = "*";

            var response = _featuresSearch.Search(q, countyFacet);
            return new JsonResult
            {
                JsonRequestBehavior = JsonRequestBehavior.AllowGet,
                Data = new USGSResponse() { Results = response.Results, Facets = response.Facets, Count = Convert.ToInt32(response.Count) }
            };
        }

        [HttpGet]
        public ActionResult Suggest(string q, bool fuzzy)
        {
            // Call suggest query and return results
            var response = _featuresSearch.Suggest(q, fuzzy);
            return new JsonResult
            {
                JsonRequestBehavior = JsonRequestBehavior.AllowGet,
                Data = response
            };

        }

        public ActionResult GeoSearch(string lat, string lon, int distance)
        {
            var response = _featuresSearch.GeoSearch(lat, lon, distance);
            return new JsonResult
            {
                JsonRequestBehavior = JsonRequestBehavior.AllowGet,
                Data = new USGSResponse() { Results = response.Results }
            };

        }

    }
}
