<?phpxml version="1.0" encoding="UTF-8" ?>
<configuration>
 <system.webServer>
   <rewrite>
     <rules>
       <rule name="RedirectHTTPS" enabled="true">
         <match url="(●●●（SSL接続したいディレクトリ名）/.*)" ignoreCase="false" />
         <conditions>
           <add input="{HTTPS}" pattern="off" />
         </conditions>
         <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" appendQueryString="true" redirectType="Permanent" />
       </rule>
      </rules>
   </rewrite>
 </system.webServer>
</configuration>
